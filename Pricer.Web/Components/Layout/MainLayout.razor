@inherits LayoutComponentBase
@using MudBlazor

 <MudThemeProvider Theme="_theme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>

    <!-- Top App Bar -->
    <MudAppBar Elevation="1" Color="Color.Primary">
        <MudIconButton Icon="@Icons.Material.Filled.Menu"
                       Color="Color.Inherit"
                       Edge="Edge.Start"
                       OnClick="ToggleDrawer" />
        <MudText Typo="Typo.h6">
            Black–Scholes App
        </MudText>
    </MudAppBar>

    <!-- Side Drawer -->
    <MudDrawer @bind-Open="_drawerOpen"
               Elevation="1"
               Variant="DrawerVariant.Responsive"
               ClipMode="DrawerClipMode.Always"
               Class="mud-theme-dark">

        <MudNavMenu Dense="true" Rounded="true">

            <MudNavLink Href="/" Icon="@Icons.Material.Filled.Home">
                Home
            </MudNavLink>

            <MudNavLink Href="/blackscholespricer"
                        Icon="@Icons.Material.Filled.ShowChart">
                Black–Scholes Pricer
            </MudNavLink>

            <MudNavLink Href="/about"
                        Icon="@Icons.Material.Filled.Info">
                About
            </MudNavLink>

        </MudNavMenu>

    </MudDrawer>

    <!-- Main Content -->
    <MudMainContent Class="pa-8 mt-6">
        @Body
    </MudMainContent>

</MudLayout>

